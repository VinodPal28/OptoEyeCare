@{
    ViewBag.Title = "SMS";
}
@section renderName
{
    <h5 style="color:black">SMS</h5>
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    
    <script type="text/javascript" src="//tinymce.cachefly.net/4.0/tinymce.min.js"></script>
    <script type="text/javascript">
        tinymce.init({ selector: 'textarea', width: 500 });
    </script>
    <script src="~/Assets/js/sms.js"></script>
   
</head>
<body>
    <div id="coverScreen" class="LockOn" style="display:none">
    </div>

    <div class="app-content content contentStyle">
        <div class="content-wrapper">
            <div class="content-header row" style="margin-left: 38%;">
                <span id="errorMsg"></span>
            </div>
            <div class="content-body">
                <!-- Active Orders -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-body">
                                    <div class="row">
                                        <div class="col-md-2" style="text-align: right;color:black">
                                            <div class="form-group">
                                                <label for="projectinput2">Upload Excel<span style="color: red" class="starRed">*</span> : </label>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <input type="file" id="upload" class="form-control input" name="myfile" style="height:30px">                                               
                                            </div>
                                        </div>
                                        <div class="col-md-1"></div>
                                        <div class="col-md-4">                                        
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-2" style="text-align: right;color:black">
                                            <div class="form-group">
                                                <label for="projectinput2">Body<span style="color: red" class="starRed">*</span> : </label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <textarea name="content" id="txtEditor" class="editor"></textarea>                                               
                                            </div>
                                        </div>
                                        <div class="col-md-1"></div>
                                        <div class="col-md-4">
                                        </div>
                                    </div>
                                    <br /><br />
                                    <div class="row" style="text-align:center">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary" id="send">Send</button>
                                            <button type="reset" class="btn btn-warning" id="cancelbtn">Cancel</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                     
                    </div>
                </div>
            </div>
        </div>
    </div>
  
</body>

</html>
