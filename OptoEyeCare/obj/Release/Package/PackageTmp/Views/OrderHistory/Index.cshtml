
@{
    ViewBag.Title = "Order History";
}
@section renderName
{
    <h5 style="color:black">Order History</h5>
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
   
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dataTable').DataTable({
                "ajax": {
                    "url": "/OrderHistory/GetData",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                       { "data": "customerId", "autowidth": true },
                       { "data": "name", "autowidth": true },
                       { "data": "mobno", "autowidth": true },
                       //{ "data": "email", "autowidth": true },
                       { "data": "address", "autowidth": true },
                       { "data": "orderDate", "autowidth": true },
                       { "data": "DeliveryDate", "autowidth": true },
                       { "data": "DeliveredOn", "autowidth": true },
                       { "data": "TotalPrice", "autowidth": true },
                       { "data": "entryType", "autowidth": true }

                ]
            });
        });
    </script>

</head>
<body>
    <div class="app-content content contentStyle">
        <div class="content-wrapper">
            <div class="content-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-body">
                                    <div class="row">
                                        <div class="table-responsive text-nowrap">
                                            <table id="dataTable" class="table table-sm">
                                                <thead class="thead-dark" style="color: black;">
                                                    <tr>
                                                        <th>Customer Id</th>
                                                        <th>Name</th>
                                                        <th>Mob No</th>
                                                        @*<th>Email</th>*@
                                                        <th>Address</th>
                                                        <th>Order Date</th>
                                                        <th>Delivery Date</th>
                                                        <th>Delivered On</th>
                                                        <th>Price</th>
                                                        <th>Entry Type</th>
                                                    </tr>
                                                </thead>

                                            </table>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
